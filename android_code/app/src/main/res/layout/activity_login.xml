<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="Login"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="register"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_material"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="Material Page"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_board"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="Social"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_mypage"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="mypage"
            android:textSize="10dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logotitleL"
        android:layout_below="@+id/l1"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo_ucc"
            android:id="@+id/UCClogo"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleL"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:text="UpCyClothes"
                android:id="@+id/title"
                android:textColor="@color/colorGreen"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="UPCYCLING IDEAS AND INSPIRATION"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12dp" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loginL"
    android:orientation="vertical"
    android:layout_below="@id/logotitleL"
    android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
    >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginTV"
        android:text="LogIn"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/idET"
            android:hint=" ID"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:background="@drawable/rect"/>
        <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
            android:id="@+id/pwET"
            android:textSize="25dp"
            android:hint=" PW"
        android:background="@drawable/rect"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chkTV"
            android:gravity="center"
            android:textSize="15dp"
            android:text="회원정보를 확인하세요!"
            android:visibility="invisible"
            android:textColor="@color/colorWarning"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/loginBtn"
            android:text="LOG IN"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/signupImg"
                android:src="@drawable/sign_up_img"
                android:layout_weight="1"
                />

        </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="back"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="next"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="home"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_notice"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="notice"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_cart"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGray"
            android:text="my cart"
            android:textSize="10dp" />


    </LinearLayout>
</RelativeLayout>
